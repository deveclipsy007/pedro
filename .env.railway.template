# Template de variáveis de ambiente para deploy no Railway

# API Keys - OBRIGATÓRIAS (configurar no Railway Dashboard)
OPENAI_API_KEY=sua_openai_api_key_aqui
PUBMED_API_KEY=sua_pubmed_api_key_aqui

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///data/enhanced_rag.db

# Configurações do Serviço
PORT=8000
DEBUG=false

# Configurações do Agente
AGENT_NAME=Pedro
AGENT_ROLE=Assistente Clínico Pediátrico

# Configurações do RAG
RAG_DATABASE_PATH=data/enhanced_rag.db
RAG_CHUNK_SIZE=1000
RAG_OVERLAP=200

# Configurações do PubMed
PUBMED_MAX_RESULTS=5
PUBMED_DELAY=1

# Configurações de Segurança
MAX_QUERY_LENGTH=1000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Instruções de uso:
# 1. NÃO commite este arquivo com valores reais
# 2. Configure as variáveis no Railway Dashboard em Settings > Variables
# 3. As variáveis OPENAI_API_KEY e PUBMED_API_KEY são obrigatórias
# 4. Para Railway, recomenda-se usar PORT=8000 (mas pode manter 10000 se preferir)
